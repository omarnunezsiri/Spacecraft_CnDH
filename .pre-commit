#!/bin/sh

# Reset
Color_Off='\033[0m'       # Text Reset

# Regular Colors
Black='\033[0;30m'        # Black
Red='\033[0;31m'          # Red
Green='\033[0;32m'        # Green
Yellow='\033[0;33m'       # Yellow
Blue='\033[0;34m'         # Blue
Purple='\033[0;35m'       # Purple
Cyan='\033[0;36m'         # Cyan
White='\033[0;37m'        # White


echo -e "${Cyan}Building the project...${Color_Off}"

dotnet clean; dotnet build
rc=$?

if [[ $rc != 0 ]] ; then
    echo -e "${Red}Build failed! Exiting...${Color_Off}"
    exit $rc
fi

echo -e "${Cyan}Running the test suite...${Color_Off}"
dotnet test

rc=$?

if [[ $rc != 0 ]] ; then
    echo -e "${Red}Test suite failed! Exiting...${Color_Off}"
    exit $rc
fi

echo -e "${Cyan}Verifying format...${Color_Off}"
dotnet format --verify-no-changes

rc=$?

if [[ $rc != 0 ]] ; then
	echo -e "${Yellow}Code is not formatted correctly! Running format then exiting...${Color_Off}"
	dotnet format -v diag
	exit $rc
fi

echo -e "${Green}Success! Exiting...${Color_Off}"
exit 0